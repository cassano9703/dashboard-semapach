/**
 * @fileoverview Firestore Security Rules for SEMAPACH dashboard data.
 *
 * Core Philosophy:
 * This ruleset restricts both read and write access to authenticated users only,
 * ensuring that all sensitive dashboard data is protected.
 *
 * Data Structure:
 * The database stores daily collection data and district progress in separate top-level collections.
 * - /daily_collections/{dailyCollectionId}
 * - /district_progress/{districtProgressId}
 *
 * Key Security Decisions:
 * - Read and write access is restricted to authenticated users to prevent unauthorized data access and modification.
 * - This change enhances security by moving from a public-read model to a fully authenticated model.
 * - No user-specific data exists, so the rules do not rely on user-ownership patterns.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Restricts read and write access to authenticated users.
     * @path /daily_collections/{dailyCollectionId}
     * @allow read, write: if isSignedIn();
     * @principle Ensures only logged-in users can view or modify daily collection data.
     */
    match /daily_collections/{dailyCollectionId} {
      allow read, write: if isSignedIn();
    }

    /**
     * @description Restricts read and write access to authenticated users.
     * @path /district_progress/{districtProgressId}
     * @allow read, write: if isSignedIn();
     * @principle Ensures only logged-in users can view or modify district progress data.
     */
    match /district_progress/{districtProgressId} {
      allow read, write: if isSignedIn();
    }

    // Helper function to determine if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
  }
}
